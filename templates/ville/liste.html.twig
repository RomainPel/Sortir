{% extends 'base.html.twig' %}

{% block title %}Liste des villes{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="text-dark mb-0">Liste des villes</h1>
        </div>
        <div class="mb-3">
            <a href="{{ path('villes_ajouter') }}" class="btn btn-success">‚ûï Ajouter une ville</a>
        </div>

        <div class="card shadow-sm border-0">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                        <tr>
                            <th scope="col" class="text-center" style="width: 80px;">ID</th>
                            <th scope="col">Nom</th>
                            <th scope="col" style="width: 150px;">Code postal</th>
                            <th scope="col" class="text-center" style="width: 120px;">Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for ville in villes %}
                            <tr>
                                <td class="text-center align-middle">
                                    <span class="badge bg-secondary">{{ ville.id }}</span>
                                </td>
                                <td class="align-middle fw-semibold">{{ ville.nomVille }}</td>
                                <td class="align-middle">{{ ville.codePostal }}</td>
                                <td class="text-center align-middle">
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a href="{{ path('villes_modifier', {id: ville.id}) }}"
                                           class="btn btn-outline-primary"
                                           title="Modifier">
                                            ‚úèÔ∏è
                                        </a>
                                        <div> </div>
                                        <a href="{{ path('villes_supprimer', {id: ville.id}) }}"
                                        class="btn btn-outline-danger"
                                        title="Supprimer"
                                        onclick="return confirm('√ätes-vous s√ªr de vouloir supprimer cette ville ?')">
                                        üóëÔ∏è
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="4" class="text-center py-5 text-muted">
                                    <div class="mb-2" style="font-size: 3rem;">üèôÔ∏è</div>
                                    <p class="mb-0">Aucune ville enregistr√©e.</p>
                                    <a href="{{ path('villes_ajouter') }}" class="btn btn-sm btn-success mt-3">
                                        Ajouter la premi√®re ville
                                    </a>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        {% if villes|length > 0 %}
            <div class="mt-3 text-muted small">
                <i class="bi bi-info-circle"></i> Total : {{ villes|length }} ville(s)
            </div>
        {% endif %}
    </div>
{% endblock %}
