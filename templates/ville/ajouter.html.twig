{% extends 'base.html.twig' %}

{% block title %}Ajouter une ville{% endblock %}

{% block body %}
    <div class="py-4">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">
                <div class="mb-4">
                    <h1 class="text-dark mb-2">Ajouter une ville</h1>
                    <p class="text-muted">Remplissez les informations ci-dessous pour créer une nouvelle ville</p>
                </div>

                <div class="card shadow-sm border-0">
                    <div class="card-body p-4">
                        {{ form_start(form) }}

                        <div class="mb-4">
                            {{ form_label(form.nomVille, 'Nom de la ville', {'label_attr': {'class': 'form-label fw-semibold'}}) }}
                            {{ form_widget(form.nomVille, {'attr': {'class': 'form-control form-control-lg', 'placeholder': 'Ex: Nantes'}}) }}
                            <div class="form-text text-danger">
                                {{ form_errors(form.nomVille) }}
                            </div>
                        </div>

                        <div class="mb-4">
                            {{ form_label(form.codePostal, 'Code postal', {'label_attr': {'class': 'form-label fw-semibold'}}) }}
                            {{ form_widget(form.codePostal, {'attr': {'class': 'form-control form-control-lg', 'placeholder': 'Ex: 44000'}}) }}
                            <div class="form-text text-danger">
                                {{ form_errors(form.codePostal) }}
                            </div>
                        </div>

                        <div class="d-flex justify-content-between align-items-center mt-4 pt-3 border-top">
                            <a href="{{ path('villes_liste') }}" class="btn btn-outline-secondary">
                                ← Retour à la liste
                            </a>
                            <button type="submit" class="btn btn-outline-secondary">
                                 Enregistrer
                            </button>
                        </div>

                        {{ form_end(form) }}
                    </div>
                </div>

                <div class="mt-3 text-muted small">
                    <i class="bi bi-info-circle"></i> Les champs marqués sont obligatoires
                </div>
            </div>
        </div>
    </div>


{% endblock %}
