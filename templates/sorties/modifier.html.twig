{% extends 'base.html.twig' %}

{% block title %}Modifier une sortie{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .invalid-feedback {
            display: block;
            color: #dc3545;
            font-size: 0.875em;
            margin-top: 0.25rem;
        }
        .is-invalid {
            border-color: #dc3545;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="py-4">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-8 col-md-10">
                    <div class="mb-4">
                        <h1 class="text-dark mb-2">{{ sortie.nom }}</h1>
                        <p class="text-muted">Mettez à jour les informations de cette sortie</p>
                    </div>

                    {# Erreurs générales du formulaire #}
                    {% if form.vars.errors|length > 0 %}
                        <div class="alert alert-danger">
                            <ul class="mb-0">
                                {% for error in form.vars.errors %}
                                    <li>{{ error.message }}</li>
                                {% endfor %}
                            </ul>
                        </div>
                    {% endif %}

                    <div class="card shadow-sm border-0 bg-white">
                        <div class="card-body p-4">
                            {{ form_start(form) }}
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        {{ form_label(form.nom, 'Nom de la sortie', {'label_attr': {'class': 'form-label fw-semibold'}}) }}
                                        {{ form_widget(form.nom, {
                                            'attr': {
                                                'class': 'form-control' ~ (form.nom.vars.errors|length > 0 ? ' is-invalid' : ''),
                                                'placeholder': 'Ex: Randonnée au parc'
                                            }
                                        }) }}
                                        {% if form.nom.vars.errors|length > 0 %}
                                            <div class="invalid-feedback">
                                                {% for error in form.nom.vars.errors %}
                                                    {{ error.message }}
                                                {% endfor %}
                                            </div>
                                        {% endif %}
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="mb-3">
                                        {{ form_label(form.lieu, 'Lieu', {'label_attr': {'class': 'form-label fw-semibold'}}) }}
                                        {{ form_widget(form.lieu, {
                                            'attr': {
                                                'class': 'form-select' ~ (form.lieu.vars.errors|length > 0 ? ' is-invalid' : '')
                                            }
                                        }) }}
                                        {% if form.lieu.vars.errors|length > 0 %}
                                            <div class="invalid-feedback">
                                                {% for error in form.lieu.vars.errors %}
                                                    {{ error.message }}
                                                {% endfor %}
                                            </div>
                                        {% endif %}
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="mb-3">
                                        {{ form_label(form.datedebut, 'Date et heure de la sortie', {'label_attr': {'class': 'form-label fw-semibold'}}) }}
                                        {{ form_widget(form.datedebut, {
                                            'attr': {
                                                'class': 'form-control' ~ (form.datedebut.vars.errors|length > 0 ? ' is-invalid' : '')
                                            }
                                        }) }}
                                        {% if form.datedebut.vars.errors|length > 0 %}
                                            <div class="invalid-feedback">
                                                {% for error in form.datedebut.vars.errors %}
                                                    {{ error.message }}
                                                {% endfor %}
                                            </div>
                                        {% endif %}
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="mb-3">
                                        {{ form_label(form.nbinscriptionmax, 'Nombre maximum de personne', {'label_attr': {'class': 'form-label fw-semibold'}}) }}
                                        {{ form_widget(form.nbinscriptionmax, {
                                            'attr': {
                                                'class': 'form-control' ~ (form.nbinscriptionmax.vars.errors|length > 0 ? ' is-invalid' : ''),
                                                'placeholder': 'Ex: 15'
                                            }
                                        }) }}
                                        {% if form.nbinscriptionmax.vars.errors|length > 0 %}
                                            <div class="invalid-feedback">
                                                {% for error in form.nbinscriptionmax.vars.errors %}
                                                    {{ error.message }}
                                                {% endfor %}
                                            </div>
                                        {% endif %}
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="mb-3">
                                        {{ form_label(form.datecloture, 'Date de clôture', {'label_attr': {'class': 'form-label fw-semibold'}}) }}
                                        {{ form_widget(form.datecloture, {
                                            'attr': {
                                                'class': 'form-control' ~ (form.datecloture.vars.errors|length > 0 ? ' is-invalid' : '')
                                            }
                                        }) }}
                                        {% if form.datecloture.vars.errors|length > 0 %}
                                            <div class="invalid-feedback">
                                                {% for error in form.datecloture.vars.errors %}
                                                    {{ error.message }}
                                                {% endfor %}
                                            </div>
                                        {% endif %}
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="mb-3">
                                        {{ form_label(form.duree, 'Durée (minutes)', {'label_attr': {'class': 'form-label fw-semibold'}}) }}
                                        {{ form_widget(form.duree, {
                                            'attr': {
                                                'class': 'form-control' ~ (form.duree.vars.errors|length > 0 ? ' is-invalid' : ''),
                                                'placeholder': 'Ex: 120'
                                            }
                                        }) }}
                                        {% if form.duree.vars.errors|length > 0 %}
                                            <div class="invalid-feedback">
                                                {% for error in form.duree.vars.errors %}
                                                    {{ error.message }}
                                                {% endfor %}
                                            </div>
                                        {% endif %}
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="mb-3">
                                        {{ form_label(form.descriptioninfos, 'Description', {'label_attr': {'class': 'form-label fw-semibold'}}) }}
                                        {{ form_widget(form.descriptioninfos, {
                                            'attr': {
                                                'class': 'form-control' ~ (form.descriptioninfos.vars.errors|length > 0 ? ' is-invalid' : ''),
                                                'rows': 4,
                                                'placeholder': 'Décrivez la sortie'
                                            }
                                        }) }}
                                        {% if form.descriptioninfos.vars.errors|length > 0 %}
                                            <div class="invalid-feedback">
                                                {% for error in form.descriptioninfos.vars.errors %}
                                                    {{ error.message }}
                                                {% endfor %}
                                            </div>
                                        {% endif %}
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="mb-3">
                                        {{ form_label(form.urlPhoto, 'Photo de la sortie', {'label_attr': {'class': 'form-label fw-semibold'}}) }}
                                        {{ form_widget(form.urlPhoto, {
                                            'attr': {
                                                'class': 'form-control' ~ (form.urlPhoto.vars.errors|length > 0 ? ' is-invalid' : '')
                                            }
                                        }) }}
                                        {% if form.urlPhoto.vars.errors|length > 0 %}
                                            <div class="invalid-feedback">
                                                {% for error in form.urlPhoto.vars.errors %}
                                                    {{ error.message }}
                                                {% endfor %}
                                            </div>
                                        {% endif %}
                                        <small class="form-text text-muted">Formats acceptés: JPG, PNG, GIF, BMP (max 1 Mo)</small>
                                    </div>
                                </div>
                            </div>

                            <div class="d-flex justify-content-between align-items-center mt-4 pt-3 border-top">
                                <a href="{{ path('sorties_details', {'id': sortie.id}) }}" class="btn btn-outline-secondary">
                                    ← Retour aux détails
                                </a>
                                <button type="submit" class="btn btn-outline-primary">
                                    Enregistrer les modifications
                                </button>
                            </div>

                            {{ form_end(form) }}
                        </div>
                    </div>

                    <div class="mt-3 text-muted small">
                        <i class="bi bi-info-circle"></i> Les champs marqués d'un astérisque sont obligatoires
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
