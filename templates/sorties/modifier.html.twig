{% extends 'base.html.twig' %}

{% block title %}Modifier une sortie{% endblock %}

{% block body %}
    <div class="py-4">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">
                <div class="mb-4">
                    <h1 class="text-dark mb-2">{{ sortie.nom }}</h1>
                    <p class="text-muted">Mettez à jour les informations de cette sortie</p>
                </div>

                <div class="card shadow-sm border-0">
                    <div class="card-body p-4">
                        {{ form_start(form) }}

                        <div class="mb-4">
                            {{ form_label(form.nom, 'Nom de la sortie', {'label_attr': {'class': 'form-label fw-semibold'}}) }}
                            {{ form_widget(form.nom, {'attr': {'class': 'form-control form-control-lg', 'placeholder': 'Ex: Randonnée au parc'}}) }}
                            <div class="form-text text-danger">
                                {{ form_errors(form.nom) }}
                            </div>
                        </div>

                        <div class="mb-4">
                            {{ form_label(form.lieu, 'Lieu', {'label_attr': {'class': 'form-label fw-semibold'}}) }}
                            {{ form_widget(form.lieu, {'attr': {'class': 'form-select form-select-lg'}}) }}
                            <div class="form-text text-danger">
                                {{ form_errors(form.lieu) }}
                            </div>
                        </div>

                        <div class="mb-4">
                            {{ form_label(form.datedebut, 'Date et heure de début', {'label_attr': {'class': 'form-label fw-semibold'}}) }}
                            {{ form_widget(form.datedebut, {'attr': {'class': 'form-control form-control-lg'}}) }}
                            <div class="form-text text-danger">
                                {{ form_errors(form.datedebut) }}
                            </div>
                        </div>

                        <div class="mb-4">
                            {{ form_label(form.duree, 'Durée (minutes)', {'label_attr': {'class': 'form-label fw-semibold'}}) }}
                            {{ form_widget(form.duree, {'attr': {'class': 'form-control form-control-lg', 'placeholder': 'Ex: 120'}}) }}
                            <div class="form-text text-danger">
                                {{ form_errors(form.duree) }}
                            </div>
                        </div>

                        <div class="mb-4">
                            {{ form_label(form.datecloture, 'Date de clôture des inscriptions', {'label_attr': {'class': 'form-label fw-semibold'}}) }}
                            {{ form_widget(form.datecloture, {'attr': {'class': 'form-control form-control-lg'}}) }}
                            <div class="form-text text-danger">
                                {{ form_errors(form.datecloture) }}
                            </div>
                        </div>

                        <div class="mb-4">
                            {{ form_label(form.descriptioninfos, 'Description', {'label_attr': {'class': 'form-label fw-semibold'}}) }}
                            {{ form_widget(form.descriptioninfos, {'attr': {'class': 'form-control form-control-lg', 'rows': 4, 'placeholder': 'Décrivez la sortie'}}) }}
                            <div class="form-text text-danger">
                                {{ form_errors(form.descriptioninfos) }}
                            </div>
                        </div>

                        <div class="d-flex justify-content-between align-items-center mt-4 pt-3 border-top">
                            <a href="{{ path('sorties_details', {'id': sortie.id}) }}" class="btn btn-outline-secondary">
                                ← Retour aux détails
                            </a>
                            <button type="submit" class="btn btn-outline-primary">
                                Enregistrer les modifications
                            </button>
                        </div>

                        {{ form_end(form) }}
                    </div>
                </div>

                <div class="mt-3 text-muted small">
                    <i class="bi bi-info-circle"></i> Tous les champs sont obligatoires
                </div>
            </div>
        </div>
    </div>
{% endblock %}
