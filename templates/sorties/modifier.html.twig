{% extends 'base.html.twig' %}

{% block title %}Modifier une sortie{% endblock %}

{% block body %}
    <div class="py-4">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-8 col-md-10">
                    <div class="mb-4">
                        <h1 class="text-dark mb-2">{{ sortie.nom }}</h1>
                        <p class="text-muted">Mettez à jour les informations de cette sortie</p>
                    </div>

                    <div class="card shadow-sm border-0 bg-white">
                        <div class="card-body p-4">
                            {{ form_start(form) }}
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        {{ form_label(form.nom, 'Nom de la sortie', {'label_attr': {'class': 'form-label fw-semibold'}}) }}
                                        {{ form_widget(form.nom, {'attr': {'class': 'form-control', 'placeholder': 'Ex: Randonnée au parc'}}) }}
                                        <div class="text-danger">{{ form_errors(form.nom) }}</div>
                                    </div>
                                </div>


                                <div class="col-md-6">
                                    <div class="mb-3">
                                        {{ form_label(form.nbinscriptionmax, 'Nombre maximum de personne', {'label_attr': {'class': 'form-label fw-semibold'}}) }}
                                        {{ form_widget(form.nbinscriptionmax, {'attr': {'class': 'form-control', 'placeholder': 'Ex: Randonnée au parc'}}) }}
                                        <div class="text-danger">{{ form_errors(form.nbinscriptionmax) }}</div>
                                    </div>
                                </div>


                                <div class="col-md-6">
                                    <div class="mb-3">
                                        {{ form_label(form.lieu, 'Lieu', {'label_attr': {'class': 'form-label fw-semibold'}}) }}
                                        {{ form_widget(form.lieu, {'attr': {'class': 'form-select'}}) }}
                                        <div class="text-danger">{{ form_errors(form.lieu) }}</div>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="mb-3">
                                        {{ form_label(form.datedebut, 'Date et heure de début', {'label_attr': {'class': 'form-label fw-semibold'}}) }}
                                        {{ form_widget(form.datedebut, {'attr': {'class': 'form-control'}}) }}
                                        <div class="text-danger">{{ form_errors(form.datedebut) }}</div>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="mb-3">
                                        {{ form_label(form.duree, 'Durée (minutes)', {'label_attr': {'class': 'form-label fw-semibold'}}) }}
                                        {{ form_widget(form.duree, {'attr': {'class': 'form-control', 'placeholder': 'Ex: 120'}}) }}
                                        <div class="text-danger">{{ form_errors(form.duree) }}</div>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="mb-3">
                                        {{ form_label(form.datecloture, 'Date de clôture', {'label_attr': {'class': 'form-label fw-semibold'}}) }}
                                        {{ form_widget(form.datecloture, {'attr': {'class': 'form-control'}}) }}
                                        <div class="text-danger">{{ form_errors(form.datecloture) }}</div>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="mb-3">
                                        {{ form_label(form.descriptioninfos, 'Description', {'label_attr': {'class': 'form-label fw-semibold'}}) }}
                                        {{ form_widget(form.descriptioninfos, {'attr': {'class': 'form-control', 'rows': 4, 'placeholder': 'Décrivez la sortie'}}) }}
                                        <div class="text-danger">{{ form_errors(form.descriptioninfos) }}</div>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="mb-3">
                                        {{ form_label(form.etat, 'Etat', {'label_attr': {'class': 'form-label fw-semibold'}}) }}
                                        {{ form_widget(form.etat, {'attr': {'class': 'form-control', 'rows': 4, 'placeholder': 'Décrivez la sortie'}}) }}
                                        <div class="text-danger">{{ form_errors(form.etat) }}</div>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="mb-3">
                                        {{ form_label(form.urlPhoto, 'url Photo', {'label_attr': {'class': 'form-label fw-semibold'}}) }}
                                        {{ form_widget(form.urlPhoto, {'attr': {'class': 'form-control', 'rows': 4, 'placeholder': 'Décrivez la sortie'}}) }}
                                        <div class="text-danger">{{ form_errors(form.urlPhoto) }}</div>
                                    </div>
                                </div>

                            </div>

                            <div class="d-flex justify-content-between align-items-center mt-4 pt-3 border-top">
                                <a href="{{ path('sorties_details', {'id': sortie.id}) }}" class="btn btn-outline-secondary">
                                    ← Retour aux détails
                                </a>
                                <button type="submit" class="btn btn-outline-primary">
                                    Enregistrer les modifications
                                </button>
                            </div>



                            {{ form_end(form) }}
                        </div>
                    </div>

                    <div class="mt-3 text-muted small">
                        <i class="bi bi-info-circle"></i> Tous les champs sont obligatoires
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
