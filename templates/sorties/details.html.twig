{% extends 'base.html.twig' %}

{% block title %}D√©tails de la Sortie{% endblock %}

{% block body %}
    <div class="py-4">
        <div class="row">
            <div class="col-lg-8">
                <!-- En-t√™te avec titre et statut -->
                <div class="d-flex justify-content-between align-items-start mb-4">
                    <div>

                        {% if sortie.etat and sortie.etat.id != 3 %}

                        {% else %}
                            <span class="badge bg-light text-dark fs-6 px-3 py-2">
                       Inscriptions cl√¥tur√©es
                            </span>
                        {% endif %}
                        <h1 class="text-dark mb-2">{{ sortie.nom }}</h1>
                    </div>
                    <span class="badge bg-light text-dark fs-6 px-3 py-2">
                        {{ sortie.participants|length }}/{{ sortie.nbinscriptionmax }} inscrits
                    </span>
                </div>
                <!-- Card principale avec les d√©tails -->
                <div class="card shadow-sm border-0 mb-4">
                    {% if sortie.urlPhoto %}
                        <img src="{{ asset(app_images_sortie_directory ~ '/' ~ sortie.urlPhoto) }}" class="card-img-top" alt="{{ sortie.nom }}" style="object-fit: cover; height: 200px;">
                    {% endif %}
                    <div class="card-body p-4">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="detail-item mb-3">
                                    <span class="detail-label">üóìÔ∏è <u>Date de la sortie :</u></span>
                                    <span class="detail-value">{{ sortie.datedebut|date('d/m/Y H:i') }}</span>
                                </div>

                                <div class="detail-item mb-3">
                                    <span class="detail-label">üîí <u>Cl√¥ture inscriptions :</u></span>
                                    <span class="detail-value">{{ sortie.datecloture|date('d/m/Y H:i') }}</span>
                                </div>

                                <div class="detail-item mb-3">
                                    <span class="detail-label">‚è±Ô∏è <u>Dur√©e :</u></span>
                                    <span class="detail-value">{{ sortie.duree ?? 'Non pr√©cis√©' }} minutes</span>
                                </div>

                                <div class="detail-item mb-3">
                                    <span class="detail-label">üìù <u>Description :</u></span>
                                    <span class="detail-value">{{ sortie.descriptioninfos ?? 'Aucune description disponible' }}</span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="detail-item mb-3">
                                    <span class="detail-label">üìç <u>Lieu :</u></span>
                                    <span class="detail-value">{{ sortie.lieu.nomlieu ?? 'Non pr√©cis√©' }}</span>
                                </div>

                                <div class="detail-item mb-3">
                                    <span class="detail-label">üìç <u>Rue :</u></span>
                                    <span class="detail-value">{{ sortie.lieu.rue ?? 'Non pr√©cis√©' }}</span>
                                </div>

                                <div class="detail-item mb-3">
                                    <span class="detail-label">üìç <u>Ville :</u></span>
                                    <span class="detail-value">{{ sortie.lieu.ville.nomVille ?? 'Non pr√©cis√©' }}</span>
                                </div>

                                <div class="detail-item mb-3">
                                    <span class="detail-label">üìç <u>Code Postal :</u></span>
                                    <span class="detail-value">{{ sortie.lieu.ville.codePostal ?? 'Non pr√©cis√©' }}</span>
                                </div>

                                <div class="detail-item mb-3">
                                    <span class="detail-label">üìç <u>Latitude :</u></span>
                                    <span class="detail-value">{{ sortie.lieu.latitude ?? 'Non pr√©cis√©' }}</span>
                                </div>

                                <div class="detail-item mb-3">
                                    <span class="detail-label">üìç <u>Longitude :</u></span>
                                    <span class="detail-value">{{ sortie.lieu.longitude ?? 'Non pr√©cis√©' }}</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <!-- Card Participants avec compteur et menu d√©roulant -->
                <div class="card shadow-sm border-0 mb-4">
                    <div class="card-header bg-white border-bottom py-3">
                        <div class="d-flex justify-content-between align-items-center">
                            <h5 class="mb-0">üë• Participants</h5>
                            <span class="badge bg-primary rounded-pill">
                                {{ sortie.participants|length }}/{{ sortie.nbinscriptionmax }}
                            </span>
                        </div>
                    </div>
                    <div class="card-body p-3">
                        {% if sortie.participants is empty %}
                            <div class="text-center text-muted py-4">
                                <div class="mb-2" style="font-size: 2.5rem;">üö∂</div>
                                <p class="mb-0">Aucun participant inscrit</p>

                            </div>
                        {% else %}
                            <!-- Barre de progression -->
                            <div class="mb-3">
                                {% set pourcentage = (sortie.participants|length / sortie.nbinscriptionmax * 100)|round %}
                                <div class="progress" style="height: 8px;">
                                    <div class="progress-bar {% if pourcentage >= 90 %}bg-danger{% elseif pourcentage >= 70 %}bg-warning{% else %}bg-success{% endif %}"
                                         role="progressbar"
                                         style="width: {{ pourcentage }}%">
                                    </div>
                                </div>
                                <small class="text-muted">
                                    {{ sortie.nbinscriptionmax - sortie.participants|length }} place(s) restante(s)
                                </small>
                            </div>

                            <!-- Accordion pour la liste des participants -->
                            <div class="accordion" id="participantsAccordion">
                                <div class="accordion-item">
                                    <h2 class="accordion-header">
                                        <button class="accordion-button collapsed bg-light" type="button"
                                                data-bs-toggle="collapse"
                                                data-bs-target="#participantsList"
                                                aria-expanded="false"
                                                aria-controls="participantsList">
                                            Voir la liste compl√®te
                                        </button>
                                    </h2>
                                    <div id="participantsList"
                                         class="accordion-collapse collapse">
                                        <div class="accordion-body p-0">
                                            <ul class="list-group list-group-flush">
                                                {% for participant in sortie.participants %}
                                                    <a href="{{ path('profil_view', { id: participant.id }) }}" class="link-underline-light">
                                                        <li class="list-group-item d-flex align-items-center py-2">
                                                            <div>
                                                                <div class="fw-semibold">{{ participant.pseudo }}</div>
                                                                <small class="text-muted">{{ participant.prenom }} {{ participant.nom }}</small>
                                                            </div>
                                                        </li>
                                                    </a>
                                                {% endfor %}
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>


                        {% endif %}
                    </div>
                </div>

                <!-- Boutons d'action -->
                <div class="d-grid gap-2">
                    {% set dejaInscrit = app.user in sortie.participants %}
                    {% set placesDisponibles = sortie.participants|length < sortie.nbinscriptionmax %}

                    {% if app.user != sortie.organisateur %}
                        {% if dejaInscrit %}
                            <a href="{{ path('sorties_desinscription', { id: sortie.id }) }}"
                               class="btn btn-danger btn-lg">
                                Se d√©sinscrire
                            </a>
                        {% else %}
                            <!-- V√©rifie si la sortie est "ouverte" -->
                            {% if sortie.etat and sortie.etat.noEtat == 2 %}
                                {% if placesDisponibles %}
                                    <a href="{{ path('sorties_inscription', { id: sortie.id }) }}"
                                       class="btn btn-success btn-lg">
                                        S'inscrire
                                    </a>
                                {% else %}
                                    <button class="btn btn-secondary btn-lg" disabled>
                                        Complet
                                    </button>
                                {% endif %}
                            {% else %}

                            {% endif %}

                        {% endif %}
                    {% endif %}


                    {% if sortie.organisateur == app.user %}
                        {% if sortie.etat and sortie.etat.noEtat == 1 %}
                            <a href="{{ path('sorties_modifier', {'id': sortie.id}) }}" class="btn btn-outline-info">
                                Modifier la sortie
                            </a>

                            <a href="{{ path('sorties_supprimer', {'id': sortie.id}) }}" class="btn btn-outline-danger">
                                Supprimer la sortie
                            </a>
                        {% endif %}

                        <!-- V√©rifie si la sortie est avant l'√©tat "publi√©e" -->
                        {% if sortie.etat and sortie.etat.noEtat < 2 %}
                            <a href="{{ path('sorties_publier', {'id': sortie.id}) }}" class="btn btn-outline-success">
                                Publier la sortie
                            </a>
                        {% endif %}

                        <!-- V√©rifie si la sortie est avant l'√©tat "cl√¥tur√©e" -->
                        {% if sortie.etat and sortie.etat.noEtat < 3 %}
                            <a href="{{ path('sorties_cloturer', {'id': sortie.id}) }}" class="btn btn-outline-warning">
                                Cl√¥turer les inscriptions
                            </a>
                            <!-- V√©rifie si la sortie est "cl√¥tur√©e" -->
                        {% elseif sortie.etat and sortie.etat.noEtat == 3 %}
                            <button class="btn btn-warning" disabled>
                                Inscriptions cl√¥tur√©es
                            </button>
                        {% endif %}

                    {% endif %}

                    <!-- V√©rifie si l'utilisateur est l'organisteur ou admin et que la sortie est avant l'√©tat "En cours" -->
                    {% if (sortie.organisateur == app.user or app.user.isAdministrateur) and sortie.etat and sortie.etat.noEtat < 4 %}
                        <a href="{{ path('sorties_annuler', {'id': sortie.id}) }}" class="btn btn-outline-danger">
                            Annuler la sortie
                        </a>
                    {% endif %}

                    <a href="{{ path('sorties_liste') }}" class="btn btn-outline-primary">
                        ‚Üê Retour √† la liste
                    </a>





                </div>
            </div>
        </div>
    </div>

{% endblock %}
