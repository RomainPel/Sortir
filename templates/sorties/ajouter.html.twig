{% extends 'base.html.twig' %}

{% block title %}Ajouter une Sortie{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="mb-4">Ajouter une Sortie</h1>

        {{ form_start(form) }}
        <div class="row">
            <div class="col-md-6">
                <div class="mb-3">
                    {{ form_label(form.nom) }}
                    {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.nom) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.datedebut) }}
                    {{ form_widget(form.datedebut, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.datedebut) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.datecloture) }}
                    {{ form_widget(form.datecloture, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.datecloture) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.nbinscriptionmax) }}
                    {{ form_widget(form.nbinscriptionmax, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.nbinscriptionmax) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.duree) }}
                    {{ form_widget(form.duree, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.duree) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.descriptioninfos) }}
                    {{ form_widget(form.descriptioninfos, {'attr': {'class': 'form-control', 'rows': 3}}) }}
                    {{ form_errors(form.descriptioninfos) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.urlPhoto) }}
                    {{ form_widget(form.urlPhoto, {'attr': {'class': 'form-control', 'id': 'sortie_lieu'}}) }}
                    {{ form_errors(form.urlPhoto) }}
                </div>
            </div>
            <div class="col-md-6">
                <div class="mb-3">
                    {{ form_label(form.lieu) }}
                    {{ form_widget(form.lieu, {'attr': {'class': 'form-select'}}) }}
                    {{ form_errors(form.lieu) }}
                </div>

                <fieldset class="border border-dark-subtle rounded-3 p-3">
                    <legend>Informations sur le lieu</legend>
                    <div class="mb-3">
                        <p class="detail-label">Rue</p>
                        <p class="detail-value" id="lieu-rue">Non précisé</p>
                    </div>

                    <div class="mb-3">
                        <p class="detail-label">Ville</p>
                        <p class="detail-value" id="lieu-ville">Non précisé</p>
                    </div>

                    <div class="mb-3">
                        <p class="detail-label">Code Postal</p>
                        <p class="detail-value" id="lieu-cp">Non précisé</p>
                    </div>

                    <div class="mb-3">
                        <p class="detail-label">Latitude</p>
                        <p class="detail-value" id="lieu-latitude">Non précisé</p>
                    </div>

                    <div class="mb-3">
                        <p class="detail-label">Longitude</p>
                        <p class="detail-value" id="lieu-longitude">Non précisé</p>
                    </div>
                </fieldset>
            </div>
        </div>

        <div class="text-center">
            <button class="btn btn-primary mt-2">Enregistrer</button>
            <a href="{{ path('sorties_liste') }}" class="btn btn-secondary mt-2">Retour à la liste</a>
        </div>

        {{ form_end(form) }}
    </div>
{% endblock %}

{% block javascripts %}
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const lieuSelect = document.querySelector('#sortie_lieu');
            const fields = {
                rue: document.querySelector('#lieu-rue'),
                ville: document.querySelector('#lieu-ville'),
                cp: document.querySelector('#lieu-cp'),
                lat: document.querySelector('#lieu-latitude'),
                lon: document.querySelector('#lieu-longitude')
            };

            lieuSelect.addEventListener('change', async () => {
                const lieuId = lieuSelect.value;
                if (!lieuId) {
                    Object.values(fields).forEach(el => el.textContent = 'Non précisé');
                    return;
                }

                try {
                    const response = await fetch(`/lieux/infos/${lieuId}`);
                    if (!response.ok) throw new Error('Erreur serveur');
                    const data = await response.json();

                    fields.rue.textContent = data.rue || 'Non précisé';
                    fields.ville.textContent = data.ville || 'Non précisé';
                    fields.cp.textContent = data.codePostal || 'Non précisé';
                    fields.lat.textContent = data.latitude || 'Non précisé';
                    fields.lon.textContent = data.longitude || 'Non précisé';
                } catch (error) {
                    console.error(error);
                    Object.values(fields).forEach(el => el.textContent = 'Erreur');
                }
            });
        });
    </script>
{% endblock %}
