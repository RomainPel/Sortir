{% extends 'base.html.twig' %}

{% block title %}Liste des Sorties{% endblock %}

{% block body %}
    <div class="container mt-4">

        <div class="mb-3">
            <a href="{{ path('sorties_ajouter') }}" class="btn btn-success mb-3">➕ Ajouter une sortie</a>
        </div>

        {% if sorties is empty %}
            <p>Aucune sortie enregistrée.</p>
        {% else %}
            <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
                {% for sortie in sorties %}
                    <div class="col">
                        <div class="card h-100" style="cursor: pointer;" onclick="window.location.href='{{ path('sorties_details', { id: sortie.id }) }}'">
                            {% if sortie.urlPhoto %}
                                <img src="{{ sortie.urlPhoto }}" class="card-img-top" alt="{{ sortie.nom }}">
                            {% endif %}
                            <div class="card-body">
                                <h5 class="card-title">{{ sortie.nom }}</h5>
                                <p class="card-text">Début : {{ sortie.datedebut|date('d/m/Y H:i') }}</p>
                                <p class="card-text">Clôture : {{ sortie.datecloture|date('d/m/Y H:i') }}</p>
                                <p class="card-text">Places max : {{ sortie.nbinscriptionmax }}</p>
                                <p class="card-text">
                                    {{ sortie.descriptioninfos|length > 100
                                    ? sortie.descriptioninfos|slice(0, 100) ~ '...'
                                    : sortie.descriptioninfos
                                    }}
                                </p>
                            </div>
                            <div class="card-footer text-end" style="cursor: auto;" onclick="event.stopPropagation();">
                                {% if app.user %}
                                    {# Vérifie si l'utilisateur est déjà inscrit #}
                                    {% set dejaInscrit = sortie.participants|filter(p => p.id == app.user.id)|length > 0 %}

                                    {% if dejaInscrit %}
                                        <a href="{{ path('sorties_desinscription', { id: sortie.id }) }}" class="btn btn-danger btn-sm">
                                            Se désinscrire
                                        </a>
                                    {% else %}
                                        <a href="{{ path('sorties_inscription', { id: sortie.id }) }}" class="btn btn-success btn-sm">
                                            S'inscrire
                                        </a>
                                    {% endif %}
                                {% else %}
                                    <a href="{{ path('app_login') }}" class="btn btn-outline-primary btn-sm">
                                        Se connecter pour s'inscrire
                                    </a>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% endif %}

    </div>
{% endblock %}
