{% extends 'base.html.twig' %}

{% block title %}Liste des Sorties{% endblock %}

{% block body %}
    <div class="container mt-4">
        <a href="{{ path('sorties_ajouter') }}" class="btn btn-success mb-3">➕ Ajouter une sortie</a>

        {% if sorties is empty %}
            <p>Aucune sortie enregistrée.</p>
        {% else %}
            <table class="table table-striped">
                <thead>
                <tr>
                    <th>ID</th>
                    <th>Nom</th>
                    <th>Date Début</th>
                    <th>Date Clôture</th>
                    <th>Nb Max Inscriptions</th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                {% for sortie in sorties %}
                    <tr onclick="window.location.href='{{ path('sorties_details', { id: sortie.id }) }}'" style="cursor: pointer;">
                        <td>{{ sortie.id }}</td>
                        <td>{{ sortie.nom }}</td>
                        <td>{{ sortie.datedebut|date('d/m/Y H:i') }}</td>
                        <td>{{ sortie.datecloture|date('d/m/Y H:i') }}</td>
                        <td>{{ sortie.nbinscriptionmax }}</td>
                        <td>
                            <a href="https://www.youtube.com/watch?v=dQw4w9WgXcQ" class="btn btn-success mb-3" target="_blank">
                                S'inscrire
                            </a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>

            </table>
        {% endif %}

    </div>
{% endblock %}
