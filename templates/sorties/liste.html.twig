{% extends 'base.html.twig' %}

{% block title %}Liste des Sorties{% endblock %}

{% block body %}
    <div class="container mt-5">

        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="fw-bold text-black mb-0">Sorties Ã  venir</h1>
            <a href="{{ path('sorties_ajouter') }}" class="btn btn-outline-success px-3">âž• Ajouter une sortie
            </a>
        </div>
        <form method="get" action="{{ path('sorties_liste') }}" class="mb-4">
            <div class="row g-2 align-items-end">

                <div class="col-md-3">
                    <label class="form-label">Recherche</label>
                    <input type="text" name="q" value="{{ app.request.get('q') }}" class="form-control" placeholder="ðŸ”Ž Nom de la sortie...">
                </div>

                <div class="col-md-3">
                    <label class="form-label">Site</label>
                    <select name="site" class="form-select">
                        <option value="">Tous les sites</option>
                        {% for s in sites %}
                            <option value="{{ s.nomSite }}" {{ app.request.get('site') == s.nomSite ? 'selected' }}>{{ s.nomSite }}</option>

                        {% endfor %}
                    </select>
                </div>

                <div class="col-md-2">
                    <label class="form-label">Entre le</label>
                    <input type="date" name="dateDebut" value="{{ app.request.get('dateDebut') }}" class="form-control">
                </div>

                <div class="col-md-2">
                    <label class="form-label">Et le</label>
                    <input type="date" name="dateFin" value="{{ app.request.get('dateFin') }}" class="form-control">
                </div>

                <div class="col-md-2 text-end">
                    <button type="submit" class="btn btn-primary w-100">Filtrer</button>
                </div>
            </div>

            <div class="row mt-3 g-2">
                <div class="col-md-2 form-check">
                    <input type="checkbox" name="inscrit" id="inscrit" class="form-check-input" {{ app.request.get('inscrit') ? 'checked' }}>
                    <label for="inscrit" class="form-check-label">Je suis inscrit(e)</label>
                </div>

                <div class="col-md-3 form-check">
                    <input type="checkbox" name="nonInscrit" id="nonInscrit" class="form-check-input" {{ app.request.get('nonInscrit') ? 'checked' }}>
                    <label for="nonInscrit" class="form-check-label">Je ne suis pas inscrit(e)</label>
                </div>

                <div class="col-md-3 form-check">
                    <input type="checkbox" name="organisateur" id="organisateur" class="form-check-input" {{ app.request.get('organisateur') ? 'checked' }}>
                    <label for="organisateur" class="form-check-label">Jâ€™organise</label>
                </div>

                <div class="col-md-3 form-check">
                    <input type="checkbox" name="terminee" id="terminee" class="form-check-input" {{ app.request.get('terminee') ? 'checked' }}>
                    <label for="terminee" class="form-check-label">Sorties terminÃ©es</label>
                </div>
            </div>
        </form>


        {% if sorties is empty %}
            <div class="alert alert-info text-center shadow-sm rounded-3">
                Aucune sortie enregistrÃ©e pour le moment.
            </div>
        {% else %}
            <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
                {% for sortie in sorties %}
                    <div class="col">
                        <div class="card h-100 border-0 shadow-sm rounded-4 overflow-hidden"
                             style="cursor: pointer; background-color: #f9f9f6;"
                             onclick="window.location.href='{{ path('sorties_details', { id: sortie.id }) }}'">

                            {% if sortie.urlPhoto %}
                                <img src="{{ asset(app_images_sortie_directory ~ '/' ~ sortie.urlPhoto) }}" class="card-img-top" alt="{{ sortie.nom }}" style="object-fit: cover; height: 200px;">
                            {% else %}
                                <img src="{{ asset('img/coming_soon.jpg') }}" class="card-img-top" alt="Pas d'image" style="object-fit: cover; height: 200px;">
                            {% endif %}

                            <div class="card-body">
                                <h5 class="card-title fw-bold">{{ sortie.nom }}</h5>

                                <div class="d-flex flex-wrap gap-2 mb-2">
                                    <div class="rounded-3 px-2 py-1 small text-muted d-flex align-items-center"
                                         style="background-color: #f0efeb; border: 1px solid #ddd;">
                                        <i class="bi bi-calendar-event me-1 text-secondary"></i>
                                        <span>Organisateur : {{ sortie.organisateur.pseudo }}</span>
                                    </div>
                                    <div class="rounded-3 px-2 py-1 small text-muted d-flex align-items-center"
                                         style="background-color: #f0efeb; border: 1px solid #ddd;">
                                        <i class="bi bi-calendar-event me-1 text-secondary"></i>
                                        <span>Date de la sortie {{ sortie.datedebut|date('d/m/Y H:i') }}</span>
                                    </div>
                                    <div class="rounded-3 px-2 py-1 small text-muted d-flex align-items-center"
                                         style="background-color: #f0efeb; border: 1px solid #ddd;">
                                        <i class="bi bi-calendar-x me-1 text-secondary"></i>
                                        <span>ClÃ´ture des inscriptions {{ sortie.datecloture|date('d/m/Y H:i') }}</span>
                                    </div>
                                    <div class="rounded-3 px-2 py-1 small text-muted d-flex align-items-center"
                                         style="background-color: #f0efeb; border: 1px solid #ddd;">
                                        <i class="bi bi-people me-1 text-secondary"></i>
                                        <span>{{ sortie.participants|length }}/{{ sortie.nbinscriptionmax }} inscrits</span>
                                    </div>
                                    <div class="rounded-3 px-2 py-1 small text-muted d-flex align-items-center"
                                         style="background-color: #f0efeb; border: 1px solid #ddd;">
                                        <i class="bi bi-people me-1 text-secondary"></i>
                                        <span>Etat : {{ sortie.etat.Libelle }}</span>
                                    </div>
                                    {% if app.user in sortie.participants %}
                                        <div class="rounded-3 px-2 py-1 small text-muted d-flex align-items-center"
                                             style="background-color: lightgreen; border: 1px solid #ddd;">
                                            <i class="bi bi-people me-1 text-secondary"></i>
                                            <span>Inscrit</span>
                                        </div>
                                    {% endif %}
                                </div>
                                <!--<p class="card-text text-secondary" style="font-size: 0.95rem;">
                                    {{ sortie.descriptioninfos|length > 100
                                    ? sortie.descriptioninfos|slice(0, 100) ~ '...'
                                    : sortie.descriptioninfos
                                    }}
                                </p>-->
                                <hr>
                            <div class="card-footer bg-transparent border-0 text-center"
                                 style="cursor: pointer;" onclick="event.stopPropagation(); window.location.href='{{ path('sorties_details', { id: sortie.id }) }}'">
                                <span class="text-primary fw-semibold">Voir plus â†’</span>
                            </div>
                        </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% endif %}
    </div>
{% endblock %}
