{% extends 'base.html.twig' %}

{% block title %}Liste des lieux{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="text-dark mb-0">Liste des lieux</h1>
        </div>

        <div class="mb-3">
            <a href="{{ path('lieux_ajouter') }}" class="btn btn-success">‚ûï Ajouter un lieu</a>
        </div>

        <div class="card shadow-sm border-0">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                        <tr>
                            <th scope="col" class="text-center" style="width: 80px;">ID</th>
                            <th scope="col">Nom</th>
                            <th scope="col">Ville</th>
                            <th scope="col">Adresse</th>
                            <th scope="col">Latitude</th>
                            <th scope="col">Longitude</th>
                            <th scope="col" class="text-center" style="width: 120px;">Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for lieu in lieux %}
                            <tr>
                                <td class="text-center align-middle">
                                    <span class="badge bg-secondary">{{ lieu.id }}</span>
                                </td>
                                <td class="align-middle fw-semibold">{{ lieu.nomLieu }}</td>
                                <td class="align-middle">
                                    {% if lieu.ville is defined and lieu.ville %}
                                        {{ lieu.ville.nomVille }}
                                    {% else %}
                                        <em class="text-muted">Non renseign√©e</em>
                                    {% endif %}
                                </td>
                                <td class="align-middle fw-semibold">{{ lieu.rue }}</td>
                                <td class="align-middle fw-semibold">{{ lieu.latitude }}</td>
                                <td class="align-middle fw-semibold">{{ lieu.longitude }}</td>
                                <td class="text-center align-middle">
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a href="{{ path('lieux_modifier', {id: lieu.id}) }}"
                                           class="btn btn-outline-primary"
                                           title="Modifier">
                                            ‚úèÔ∏è
                                        </a>
                                        <a href="{{ path('lieux_supprimer', {id: lieu.id}) }}"
                                           class="btn btn-outline-danger"
                                           title="Supprimer"
                                           onclick="return confirm('√ätes-vous s√ªr de vouloir supprimer ce lieu ?')">
                                            üóëÔ∏è
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="4" class="text-center py-5 text-muted">
                                    <div class="mb-2" style="font-size: 3rem;">üìç</div>
                                    <p class="mb-0">Aucun lieu enregistr√©.</p>
                                    <a href="{{ path('lieux_ajouter') }}" class="btn btn-sm btn-success mt-3">
                                        Ajouter le premier lieu
                                    </a>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        {% if lieux|length > 0 %}
            <div class="mt-3 text-muted small">
                <i class="bi bi-info-circle"></i> Total : {{ lieux|length }} lieu(x)
            </div>
        {% endif %}
    </div>
{% endblock %}
