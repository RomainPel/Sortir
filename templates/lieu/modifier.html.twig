{% extends 'base.html.twig' %}

{% block title %}Modifier un lieu{% endblock %}

{% block body %}
    <div class="py-4">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">
                <div class="mb-4">
                    <h1 class="text-dark mb-2">Modifier un lieu</h1>
                    <p class="text-muted">Mettez à jour les informations de ce lieu</p>
                </div>

                <div class="card shadow-sm border-0">
                    <div class="card-body p-4">
                        {{ form_start(form) }}

                        <div class="mb-4">
                            {{ form_label(form.nomLieu, 'Nom du lieu', {'label_attr': {'class': 'form-label fw-semibold'}}) }}
                            {{ form_widget(form.nomLieu, {'attr': {'class': 'form-control form-control-lg', 'placeholder': 'Ex: Parc du Grand Jardin'}}) }}
                            <div class="form-text text-danger">
                                {{ form_errors(form.nomLieu) }}
                            </div>
                        </div>

                        <div class="mb-4">
                            {{ form_label(form.rue, 'Rue', {'label_attr': {'class': 'form-label fw-semibold'}}) }}
                            {{ form_widget(form.rue, {'attr': {'class': 'form-control form-control-lg', 'placeholder': 'Ex: 12 Rue des Fleurs'}}) }}
                            <div class="form-text text-danger">
                                {{ form_errors(form.rue) }}
                            </div>
                        </div>

                        <div class="mb-4">
                            {{ form_label(form.latitude, 'Latitude', {'label_attr': {'class': 'form-label fw-semibold'}}) }}
                            {{ form_widget(form.latitude, {'attr': {'class': 'form-control form-control-lg', 'placeholder': 'Ex: 47.2184'}}) }}
                            <div class="form-text text-danger">
                                {{ form_errors(form.latitude) }}
                            </div>
                        </div>

                        <div class="mb-4">
                            {{ form_label(form.longitude, 'Longitude', {'label_attr': {'class': 'form-label fw-semibold'}}) }}
                            {{ form_widget(form.longitude, {'attr': {'class': 'form-control form-control-lg', 'placeholder': '-1.5536'}}) }}
                            <div class="form-text text-danger">
                                {{ form_errors(form.longitude) }}
                            </div>
                        </div>

                        <div class="mb-4">
                            {{ form_label(form.ville, 'Ville associée', {'label_attr': {'class': 'form-label fw-semibold'}}) }}
                            {{ form_widget(form.ville, {'attr': {'class': 'form-select form-select-lg'}}) }}
                            <div class="form-text text-danger">
                                {{ form_errors(form.ville) }}
                            </div>
                        </div>

                        <div class="d-flex justify-content-between align-items-center mt-4 pt-3 border-top">
                            <a href="{{ path('lieux_liste') }}" class="btn btn-outline-secondary">
                                ← Retour à la liste
                            </a>
                            <button type="submit" class="btn btn-outline-secondary">
                                Enregistrer les modifications
                            </button>
                        </div>

                        {{ form_end(form) }}
                    </div>
                </div>

                <div class="mt-3 text-muted small">
                    <i class="bi bi-info-circle"></i> Tous les champs sont obligatoires
                </div>
            </div>
        </div>
    </div>
{% endblock %}
