{% extends '@EasyAdmin/page/content.html.twig' %}

{% block content %}
    <div class="container mt-5" style="max-width: 600px; margin: 0 auto;">

        <h1 class="mb-4 text-center">Importer des utilisateurs CSV</h1>

        {% if message %}
            <div class="alert alert-{{ message[0] == 'success' ? 'success' : 'danger' }}">
                {{ message[1] }}
            </div>
        {% endif %}

        <form method="post" enctype="multipart/form-data" class="text-center">
            <div class="mb-3 text-start">
                <label for="csv_file" class="form-label fw-bold">Fichier CSV :</label>
                <input type="file" name="csv_file" id="csv_file" accept=".csv" class="form-control" required>
            </div>
            <button type="submit" class="btn btn-primary mt-2">Importer</button>
        </form>

        <hr class="my-4">

        <div class="text-center">
            <p><strong>Format attendu :</strong></p>
            <pre class="bg-light p-3 rounded">pseudo;nom;prenom;telephone;mail;mot_de_passe</pre>
        </div>

    </div>
{% endblock %}
