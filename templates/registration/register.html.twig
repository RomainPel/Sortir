{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .registration-container {
            min-height: 50vh;
            display: flex;
            align-items: center;
            padding: 2rem 0;
        }

        /* --- Bloc transparent avec ombre --- */
        .card.shadow-sm {
            background: rgba(255, 255, 255, 0.1); /* 10% opaque blanc */
            backdrop-filter: blur(10px);           /* effet flou derrière */
            border: 1px solid rgba(255, 255, 255, 0.3);
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3); /* ombre visible */
            color: #000000;
        }

        label, .form-check-label, .text-muted, small {
            color: #000000 !important;
        }

        input.form-control {
            background-color: rgba(255, 255, 255, 0.5);
        }

        /* Champs invalides */
        .invalid-feedback {
            display: block;
            color: #dc3545;
            font-size: 0.875em;
            margin-top: 0.25rem;
        }

        .is-invalid {
            border-color: #dc3545;
        }

        /* Animation d’apparition douce */
        .card {
            opacity: 0;
            transform: translateY(15px);
            animation: fadeInUp 0.6s ease forwards;
        }

        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(15px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
    </style>
{% endblock %}

{% block body %}
    <div class="registration-container">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-10 col-xl-8">
                    <div class="text-center mb-4">
                        <h1 class="mb-2">S'inscrire</h1>
                        <p>Créez votre compte pour rejoindre la communauté</p>
                    </div>

                    {% if registrationForm.vars.errors|length > 0 %}
                        <div class="alert alert-danger">
                            <ul class="mb-0">
                                {% for error in registrationForm.vars.errors %}
                                    <li>{{ error.message }}</li>
                                {% endfor %}
                            </ul>
                        </div>
                    {% endif %}

                    <div class="card shadow-sm border-0">
                        <div class="card-body p-4">
                            {{ form_start(registrationForm) }}

                            <div class="row">
                                <!-- Colonne gauche -->
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        {{ form_label(registrationForm.pseudo, 'Pseudo', {'label_attr': {'class': 'form-label fw-semibold'}}) }}
                                        {{ form_widget(registrationForm.pseudo, {
                                            'attr': {
                                                'class': 'form-control' ~ (registrationForm.pseudo.vars.errors|length > 0 ? ' is-invalid' : ''),
                                                'placeholder': 'Choisissez un pseudo'
                                            }
                                        }) }}
                                        {% if registrationForm.pseudo.vars.errors|length > 0 %}
                                            <div class="invalid-feedback">
                                                {% for error in registrationForm.pseudo.vars.errors %}
                                                    {{ error.message }}
                                                {% endfor %}
                                            </div>
                                        {% endif %}
                                    </div>

                                    <div class="mb-3">
                                        {{ form_label(registrationForm.nom, 'Nom', {'label_attr': {'class': 'form-label fw-semibold'}}) }}
                                        {{ form_widget(registrationForm.nom, {
                                            'attr': {
                                                'class': 'form-control' ~ (registrationForm.nom.vars.errors|length > 0 ? ' is-invalid' : ''),
                                                'placeholder': 'Votre nom'
                                            }
                                        }) }}
                                        {% if registrationForm.nom.vars.errors|length > 0 %}
                                            <div class="invalid-feedback">
                                                {% for error in registrationForm.nom.vars.errors %}
                                                    {{ error.message }}
                                                {% endfor %}
                                            </div>
                                        {% endif %}
                                    </div>

                                    <div class="mb-3">
                                        {{ form_label(registrationForm.prenom, 'Prénom', {'label_attr': {'class': 'form-label fw-semibold'}}) }}
                                        {{ form_widget(registrationForm.prenom, {
                                            'attr': {
                                                'class': 'form-control' ~ (registrationForm.prenom.vars.errors|length > 0 ? ' is-invalid' : ''),
                                                'placeholder': 'Votre prénom'
                                            }
                                        }) }}
                                        {% if registrationForm.prenom.vars.errors|length > 0 %}
                                            <div class="invalid-feedback">
                                                {% for error in registrationForm.prenom.vars.errors %}
                                                    {{ error.message }}
                                                {% endfor %}
                                            </div>
                                        {% endif %}
                                    </div>

                                    <div class="mb-3">
                                        {{ form_label(registrationForm.telephone, 'Téléphone', {'label_attr': {'class': 'form-label fw-semibold'}}) }}
                                        {{ form_widget(registrationForm.telephone, {
                                            'attr': {
                                                'class': 'form-control' ~ (registrationForm.telephone.vars.errors|length > 0 ? ' is-invalid' : ''),
                                                'placeholder': '06 12 34 56 78'
                                            }
                                        }) }}
                                        {% if registrationForm.telephone.vars.errors|length > 0 %}
                                            <div class="invalid-feedback">
                                                {% for error in registrationForm.telephone.vars.errors %}
                                                    {{ error.message }}
                                                {% endfor %}
                                            </div>
                                        {% endif %}
                                        <small class="form-text text-muted">Optionnel</small>
                                    </div>
                                </div>

                                <!-- Colonne droite -->
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        {{ form_label(registrationForm.mail, 'Email', {'label_attr': {'class': 'form-label fw-semibold'}}) }}
                                        {{ form_widget(registrationForm.mail, {
                                            'attr': {
                                                'class': 'form-control' ~ (registrationForm.mail.vars.errors|length > 0 ? ' is-invalid' : ''),
                                                'placeholder': 'votre.email@exemple.com'
                                            }
                                        }) }}
                                        {% if registrationForm.mail.vars.errors|length > 0 %}
                                            <div class="invalid-feedback">
                                                {% for error in registrationForm.mail.vars.errors %}
                                                    {{ error.message }}
                                                {% endfor %}
                                            </div>
                                        {% endif %}
                                    </div>

                                    <div class="mb-3">
                                        {{ form_label(registrationForm.plainPassword.first, 'Mot de passe', {'label_attr': {'class': 'form-label fw-semibold'}}) }}
                                        {{ form_widget(registrationForm.plainPassword.first, {
                                            'attr': {
                                                'class': 'form-control' ~ (registrationForm.plainPassword.vars.errors|length > 0 ? ' is-invalid' : ''),
                                                'placeholder': 'Minimum 8 caractères'
                                            }
                                        }) }}
                                        {% if registrationForm.plainPassword.vars.errors|length > 0 %}
                                            <div class="invalid-feedback">
                                                {% for error in registrationForm.plainPassword.vars.errors %}
                                                    {{ error.message }}
                                                {% endfor %}
                                            </div>
                                        {% endif %}
                                    </div>

                                    <div class="mb-3">
                                        {{ form_label(registrationForm.plainPassword.second, 'Confirmer le mot de passe', {'label_attr': {'class': 'form-label fw-semibold'}}) }}
                                        {{ form_widget(registrationForm.plainPassword.second, {
                                            'attr': {
                                                'class': 'form-control' ~ (registrationForm.plainPassword.vars.errors|length > 0 ? ' is-invalid' : ''),
                                                'placeholder': 'Retapez votre mot de passe'
                                            }
                                        }) }}
                                    </div>

                                    <div class="alert alert-info py-2 mb-3">
                                        <small>
                                            <i class="bi bi-info-circle"></i>
                                            Le mot de passe doit contenir :
                                            <ul class="mb-0 mt-1">
                                                <li>Au moins 8 caractères</li>
                                                <li>Une majuscule</li>
                                                <li>Un chiffre</li>
                                                <li>Un caractère spécial (!@#$%...)</li>
                                            </ul>
                                        </small>
                                    </div>

                                    {% if registrationForm.agreeTerms is defined %}
                                        <div class="mb-3 form-check">
                                            {{ form_widget(registrationForm.agreeTerms, {
                                                'attr': {
                                                    'class': 'form-check-input' ~ (registrationForm.agreeTerms.vars.errors|length > 0 ? ' is-invalid' : '')
                                                }
                                            }) }}
                                            {{ form_label(registrationForm.agreeTerms, null, {'label_attr': {'class': 'form-check-label'}}) }}
                                            {% if registrationForm.agreeTerms.vars.errors|length > 0 %}
                                                <div class="invalid-feedback">
                                                    {% for error in registrationForm.agreeTerms.vars.errors %}
                                                        {{ error.message }}
                                                    {% endfor %}
                                                </div>
                                            {% endif %}
                                        </div>
                                    {% endif %}
                                </div>
                            </div>

                            <div class="row mt-3">
                                <div class="col-12">
                                    <div class="d-grid gap-2">
                                        <button type="submit" class="btn btn-primary btn-lg">
                                            <i class="bi bi-person-plus"></i> S'inscrire
                                        </button>
                                    </div>
                                </div>
                            </div>

                            {{ form_end(registrationForm) }}
                        </div>
                    </div>

                    <div class="text-center mt-3">
                        <p class="text-muted">
                            Vous avez déjà un compte ?
                            <a href="{{ path('app_login') }}" class="text-decoration-none fw-semibold">Se connecter</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
