{% extends 'base.html.twig' %}

{% block title %}Liste des sites{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="text-dark mb-0">Liste des sites</h1>
        </div>

        <div class="mb-3 d-flex justify-content-between align-items-center">
            <a href="{{ path('sites_ajouter') }}" class="btn btn-success">‚ûï Ajouter un site</a>
            <form method="get" action="{{ path('sites_liste') }}" class="d-flex">
                <input type="text" name="search" class="form-control form-control-sm me-2"
                       placeholder="Rechercher un site..." value="{{ app.request.get('search') }}">
                <button type="submit" class="btn btn-outline-primary btn-sm">üîç</button>
            </form>
        </div>

        <div class="card shadow-sm border-0">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                        <tr>
                            <th scope="col" class="text-center" style="width: 80px;">ID</th>
                            <th scope="col">Nom du site</th>
                            <th scope="col" class="text-center" style="width: 120px;">Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for site in sites %}
                            <tr>
                                <td class="text-center align-middle">
                                    <span class="badge bg-secondary">{{ site.id }}</span>
                                </td>
                                <td class="align-middle fw-semibold">{{ site.nomSite }}</td>
                                <td class="text-center align-middle">
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a href="{{ path('sites_modifier', {id: site.id}) }}"
                                           class="btn btn-outline-primary"
                                           title="Modifier">
                                            ‚úèÔ∏è
                                        </a>
                                        <a href="{{ path('sites_supprimer', {id: site.id}) }}"
                                           class="btn btn-outline-danger"
                                           title="Supprimer"
                                           onclick="return confirm('√ätes-vous s√ªr de vouloir supprimer ce site ?')">
                                            üóëÔ∏è
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="3" class="text-center py-5 text-muted">
                                    <div class="mb-2" style="font-size: 3rem;">üè¢</div>
                                    <p class="mb-0">Aucun site enregistr√©.</p>
                                    <a href="{{ path('sites_ajouter') }}" class="btn btn-sm btn-success mt-3">
                                        Ajouter le premier site
                                    </a>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        {% if sites|length > 0 %}
            <div class="mt-3 text-muted small">
                <i class="bi bi-info-circle"></i> Total : {{ sites|length }} site(s)
            </div>
        {% endif %}
    </div>
{% endblock %}
