{% extends 'base.html.twig' %}

{% block title %}Ajouter un site{% endblock %}

{% block body %}
    <div class="py-4">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">
                <div class="mb-4">
                    <h1 class="text-dark mb-2">Ajouter un site</h1>
                    <p class="text-muted">Remplissez les informations ci-dessous pour créer un nouveau site</p>
                </div>

                <div class="card shadow-sm border-0">
                    <div class="card-body p-4">
                        {{ form_start(form) }}

                        <div class="mb-4">
                            {{ form_label(form.nomSite, 'Nom du site', {'label_attr': {'class': 'form-label fw-semibold'}}) }}
                            {{ form_widget(form.nomSite, {
                                'attr': {
                                    'class': 'form-control form-control-lg',
                                    'placeholder': 'Ex: Campus de Nantes'
                                }
                            }) }}
                            <div class="form-text text-danger">
                                {{ form_errors(form.nomSite) }}
                            </div>
                        </div>

                        <div class="d-flex justify-content-between align-items-center mt-4 pt-3 border-top">
                            <a href="{{ path('sites_liste') }}" class="btn btn-outline-secondary">
                                ← Retour à la liste
                            </a>
                            <button type="submit" class="btn btn-outline-secondary">
                                Enregistrer
                            </button>
                        </div>

                        {{ form_end(form) }}
                    </div>
                </div>

                <div class="mt-3 text-muted small">
                    <i class="bi bi-info-circle"></i> Les champs marqués sont obligatoires
                </div>
            </div>
        </div>
    </div>
{% endblock %}
